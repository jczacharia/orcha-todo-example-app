{
  "compileOnSave": false,
  "angularCompilerOptions": {
    "strictInjectionParameters": true,
    "strictTemplates": true
  },
  "compilerOptions": {
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noErrorTruncation": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2019", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@orcha-todo-example-app/server/core/services": [
        "libs/server/core/services/src/index.ts"
      ],
      "@orcha-todo-example-app/server/core/domain": [
        "libs/server/core/domain/src/index.ts"
      ],
      "@orcha-todo-example-app/server/orcha": [
        "libs/server/orcha/src/index.ts"
      ],
      "@orcha-todo-example-app/client/shared/data-access": [
        "libs/client/shared/data-access/src/index.ts"
      ],
      "@orcha-todo-example-app/client/shell": [
        "libs/client/shell/src/index.ts"
      ],
      "@orcha-todo-example-app/shared/domain": [
        "libs/shared/domain/src/index.ts"
      ],
      "@orcha-todo-example-app/shared/util": ["libs/shared/util/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
